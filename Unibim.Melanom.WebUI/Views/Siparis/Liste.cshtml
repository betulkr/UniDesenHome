@model List<Siparis>

@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_LayoutBayi.cshtml";
}

<link href="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<div class="portlet light portlet-fit ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-list font-blue-hoki"></i>
            <span class="caption-subject font-blue-hoki sbold uppercase"> Sİpariş Listesi </span>
        </div>
        <div class="actions">

            <a class="btn btn-circle blue-hoki btn-outline btn-sm" data-toggle="collapse"
               href="/Siparis">
                <span class="fa fa-plus"></span> Yeni Sipariş Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">

        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th> Müşteri Adı </th>
                    <th> Sipariş Tarihi </th>
                    <th> Durum </th>
                    <th> İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var m in Model)
                    {
                        <tr>
                            <td> @m.Musteri.adSoyad </td>
                            <td> @m.siparisTarihi </td>
                            <td> @m.durum </td>
                            <td>

                                <a title="Sipariş Detayı" class=" btn btn-sm purple circle" href="/Siparis/Detay/@m.siparisId"><span class="fa fa-search"></span></a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Content/themes/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/pages/scripts/table-datatables-editable.min.js" type="text/javascript"></script>
