@model List<SepetUrun>
@{
    ViewBag.Title = "Sepet";
    Layout = "~/Views/Shared/_LayoutBayi.cshtml";
    string id = "";
    double toplam = 0;

}


<link href="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<div class="portlet light " id="form_wizard_1">
    <div class="portlet-title">
        <div class="caption">
            <i class=" icon-layers font-red"></i>
            <span class="caption-subject font-red bold uppercase">
                Sipariş Oluştur /
                <span class="step-title"> ADIM-4 : Ürün İndirimleri </span>
            </span>
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" action="/Siparis/Indirim" method="POST">
            <div class="form-wizard">
                <div class="form-body">

                    <ul class="nav nav-pills nav-justified steps">
                        <li>
                            <a href="#" data-toggle="tab" class="step">
                                <span class="number"> <i class="fa fa-check"></i> </span>

                                Müşteri Kayıt

                            </a>
                        </li>
                        <li>
                            <a href="#" data-toggle="tab" class="step">
                                <span class="number"> <i class="fa fa-check"></i> </span>

                                Ürün Seçimi

                            </a>
                        </li>
                        <li>
                            <a href="#" data-toggle="tab" class="step">
                                <span class="number"> <i class="fa fa-check"></i> </span>

                                Ürün Özellikleri

                            </a>
                        </li>
                        <li class="active">
                            <a href="#" data-toggle="tab" class="step">
                                <span class="number"> 4 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> İndirim
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#" data-toggle="tab" class="step">
                                <span class="number"> 5 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Doğrulama
                                </span>
                            </a>
                        </li>
                    </ul>
                    <hr />
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab3">

                            <table class="table table-striped table-hover table-bordered">
                                <thead>
                                    <tr>

                                        <th> Ürün Adı </th>
                                        <th> Ürün Fiyatı </th>
                                        <th> İndirim Oranı </th>
                                        <th> İndirimli Fiyatı </th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @{
                                        if (Model != null && Model.Count > 0)
                                        {


                                            foreach (var m in Model)
                                            {

                                                <tr>
                                                    @{
                                                        id = "urun" + m.sepetUrunId;
                                                        toplam = toplam + (double)m.Urun.fiyat;
                                                    }

                                                    <td> @m.Urun.ad </td>
                                                    <td> @m.Urun.fiyat ₺ </td>
                                                    <td>
                                                        @{
                                                            if (m.indirimOranı != null)
                                                            {
                                                                <input type="number" class="form-control form-filter input-sm" name="indirimOrans" value="@m.indirimOranı" onchange="myFunction(this.value,@m.Urun.fiyat,@m.sepetUrunId)">
                                                            }
                                                            else
                                                            {
                                                                <input type="number" class="form-control form-filter input-sm" name="indirimOrans" value="0" onchange="myFunction(this.value,@m.Urun.fiyat,@m.sepetUrunId)">
                                                            }
                                                        }

                                                    </td>
                                                    <td>
                                                        @{
                                                            if (m.indirimliFiyat != null)
                                                            {
                                                                <input type="text" class="form-control form-filter input-sm" id="@id" value="@m.indirimliFiyat  ₺">

                                                            }
                                                            else
                                                            {
                                                                <input type="text" class="form-control form-filter input-sm" id="@id" value="@m.Urun.fiyat  ₺">

                                                            }
                                                        }
                                                    </td>

                                                </tr>

                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                           
                            <!--<div class="row">

                                <div class="well">
                                    <div class="row static-info align-reverse">
                                        <div class="col-md-8 name"> Toplam Tutar: </div>
                                        <div class="col-md-3 value"> @toplam  ₺ </div>
                                    </div>-->
                                    @*<div class="row static-info align-reverse">
                                        <div class="col-md-8 name"> İndirimli Toplam Tutar: </div>
                                        <div class="col-md-3 value"> 40.50 </div>
                                    </div>*@
                                <!--</div>
                            </div>-->
                        </div>

                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <a href="javascript:;" class="btn default button-previous btn-circle">
                                    <i class="fa fa-angle-left"></i> Geri
                                </a>
                                <button type="submit" class="btn btn-outline blue-hoki btn-circle">
                                    <i class="glyphicon glyphicon-floppy-saved"></i>&nbsp; Kaydet
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>
</div>

<script src="~/Content/themes/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/pages/scripts/table-datatables-editable.min.js" type="text/javascript"></script>

@section footerScript{

    <script>
        function myFunction(val ,fiyat, id) {

            var yeniFiyat = fiyat - ((fiyat * val) / 100);
            var urunId = "urun" + id;
            document.getElementById(urunId).value = yeniFiyat;
            //alert("The input value has changed. The new value is: " + yeniFiyat);
        }
    </script>
}
