@model List<Urun>
@{
    ViewBag.Title = "Urun";
    Layout = "~/Views/Shared/_LayoutBayi.cshtml";



}

<link href="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<div class="portlet light " id="form_wizard_1">
    <div class="portlet-title">
        <div class="caption">
            <i class=" icon-layers font-red"></i>
            <span class="caption-subject font-red bold uppercase">
                Sipariş Oluştur /
                <span class="step-title"> ADIM-2 : Ürün Seç </span>
            </span>
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body form">
        <form class="form-horizontal" action="/Siparis/Urun" method="POST">
            <div class="form-wizard">
                <div class="form-body">

                    <ul class="nav nav-pills nav-justified steps">
                        <li>
                            <a href="#tab1" data-toggle="tab" class="step">
                                <span class="number"> <i class="fa fa-check"></i> </span>

                                Müşteri Kayıt

                            </a>
                        </li>
                        <li class="active">
                            <a href="#" data-toggle="tab" class="step">
                                <span class="number"> 2 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Ürün Seçimi
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#" data-toggle="tab" class="step active">
                                <span class="number"> 3 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Sepet
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#" data-toggle="tab" class="step">
                                <span class="number"> 4 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> İndirim
                                </span>
                            </a>
                        </li>
                        <li>
                            <a href="#" data-toggle="tab" class="step">
                                <span class="number"> 5 </span>
                                <span class="desc">
                                    <i class="fa fa-check"></i> Doğrulama
                                </span>
                            </a>
                        </li>
                    </ul>
                    <hr />
                    <div class="tab-content">
                        <div class="tab-pane active" id="tab2">


                            <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th> Ürün Adı </th>
                                        <th> Takım Adı </th>
                                        <th> Ürün Grubu </th>
                                        <th> Fiyat </th>
                                        <th> Adet </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        if (Session["sepetId"] != null)
                                        {
                                            int sepetId = (int)Session["sepetId"];

                                            var sepetUruns = Unibim.Melanom.WebUI.Models.Connection.DbModel.EF.SepetUrun.Where(x => x.sepetId == sepetId).ToList();
                                            var uruns = Unibim.Melanom.WebUI.Models.Connection.DbModel.EF.Urun.OrderBy(x => x.takimId).ToList();
                                            if (sepetUruns != null && sepetUruns.Count > 0)
                                            {

                                                foreach (var s in sepetUruns)
                                                {
                                                    uruns = uruns.Where(x => x.urunId != s.urunId).ToList();

                                                    <tr>
                                                        <td>
                                                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                                <input type="checkbox" class="group-checkable" name="urunId[]" value="@s.urunId" checked />
                                                                <span></span>
                                                            </label>
                                                        </td>
                                                        <td> @s.Urun.ad </td>
                                                        <td> @s.Urun.Takim.takimAdi</td>
                                                        <td> @s.Urun.Grup.ad </td>
                                                        <td> @s.Urun.fiyat </td>
                                                        <td>
                                                            <input type="number" class="form-control form-filter input-sm" name="adet[]" value="@s.adet"> 
                                                        </td>
                                                    </tr>
                                                }

                                                if (uruns != null && uruns.Count > 0)
                                                {
                                                    foreach (var urun in uruns)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                                    <input type="checkbox" class="group-checkable" name="urunId[]" value="@urun.urunId" />
                                                                    <span></span>
                                                                </label>
                                                            </td>
                                                            <td> @urun.ad </td>
                                                            <td> @urun.Takim.takimAdi</td>
                                                            <td> @urun.Grup.ad </td>
                                                            <td> @urun.fiyat </td>
                                                            <td>
                                                                <input type="number" class="form-control form-filter input-sm" name="adet[]" placeholder="0">
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            }
                                            else
                                            {
                                                if (Model != null && Model.Count > 0)
                                                {
                                                    foreach (var u in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                                    <input type="checkbox" class="group-checkable" name="urunId[]" value="@u.urunId" />
                                                                    <span></span>
                                                                </label>
                                                            </td>
                                                            <td> @u.ad </td>
                                                            <td> @u.Takim.takimAdi</td>
                                                            <td> @u.Grup.ad </td>
                                                            <td> @u.fiyat </td>
                                                            <td>
                                                                <input type="number" class="form-control form-filter input-sm" name="adet[]" placeholder="0">
                                                            </td>
                                                        </tr>
                                                    }



                                                }
                                            }
                                        }
                                        else
                                        {
                                            if (Model != null && Model.Count > 0)
                                            {
                                                foreach (var u in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                                                <input type="checkbox" class="group-checkable" name="urunId[]" value="@u.urunId" />
                                                                <span></span>
                                                            </label>
                                                        </td>
                                                        <td> @u.ad </td>
                                                        <td> @u.Takim.takimAdi</td>
                                                        <td> @u.Grup.ad </td>
                                                        <td> @u.fiyat </td>
                                                        <td>  <input type="number" class="form-control form-filter input-sm" name="adet[]" placeholder="0">  </td>
                                                    </tr>
                                                }



                                            }
                                        }


                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <a href="javascript:;" class="btn default button-previous btn-circle">
                                <i class="fa fa-angle-left"></i> Geri
                            </a>
                            <button type="submit" class="btn btn-outline blue-hoki btn-circle">
                                <i class="glyphicon glyphicon-floppy-saved"></i>&nbsp; Kaydet
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="~/Content/themes/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/pages/scripts/table-datatables-editable.min.js" type="text/javascript"></script>