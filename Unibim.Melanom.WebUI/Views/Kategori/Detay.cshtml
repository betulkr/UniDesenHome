@model List<Altkategori>
@{
    ViewBag.Title = "Detay";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";

    int id = (int)Session["kategoriId"];
    string kategoriAd = Unibim.Melanom.WebUI.Models.Connection.DbModel.EF.Kategori.Where(x => x.kategoriId == id).FirstOrDefault().ad;
}

<div class="portlet light bordered collapse" id="ekle">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus font-blue-hoki"></i>
            <span class="caption font-blue-hoki bold uppercase">&nbsp; @kategoriAd  Yeni Alt Kategori Ekle </span>
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <div class="form-body">
            <form method="post" action="/Kategori/AltkategoriKayit" class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Alt Kategori Adı
                    </label>
                    <div class="col-md-9">
                        <input type="text" hidden="hidden" value="@id" name="kategoriId" />
                        @Html.TextBox("ad", "", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Alt Kategori İconu
                    </label>
                    <div class="col-md-9">
                        @Html.DropDownList("icon", new SelectList(new List<SelectListItem> {
                                      new SelectListItem { Text = "Kanepe", Value = "f-icon f-icon-sofa"},
                                      new SelectListItem { Text = "Koltuk", Value = "f-icon f-icon-armchair"},
                                      new SelectListItem { Text = "Sandalye", Value = "f-icon f-icon-chair"},
                                      new SelectListItem { Text = "Yemek Masası", Value = "f-icon f-icon-dining-table"},
                                      new SelectListItem { Text = "Tv Ünitesi", Value = "f-icon f-icon-media-cabinet"},
                                      new SelectListItem { Text = "Konsol", Value = "f-icon f-icon-media-cabinet"},
                                      new SelectListItem { Text = "Orta Sehpa", Value = "f-icon f-icon-table"},
                                      new SelectListItem { Text = "Kitaplık", Value = "f-icon f-icon-bookcase"},
                                      new SelectListItem { Text = "Yatak", Value = "f-icon f-icon-bedroom"},
                                      new SelectListItem { Text = "Çocuk Odası", Value = "f-icon f-icon-children-room"},
                                      new SelectListItem { Text = "komodin", Value = "f-icon f-icon-nightstand"},
                                      new SelectListItem { Text = "Yatak Odası", Value = "f-icon f-icon-bathroom"},
                                      new SelectListItem { Text = "Gardrop", Value = "f-icon f-icon-wardrobe"},
                                      new SelectListItem { Text = "Portmanto", Value = "f-icon f-icon-shoe-cabinet"},
                                      new SelectListItem { Text = "Aydınlatma", Value = "f-icon f-icon-lightning"},
                                      new SelectListItem { Text = "Halı", Value = "f-icon f-icon-carpet"},
                                      new SelectListItem { Text = "Aksesuar", Value = "f-icon f-icon-accessories"},
                                      new SelectListItem { Text = "Mutfak", Value = "f-icon f-icon-kitchen"},
                                      new SelectListItem { Text = "Ofis", Value = "f-icon f-icon-office"},
                                      }, "Value", "Text"),
                                      "Seçiniz", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline blue-hoki btn-circle">
                        <i class="glyphicon glyphicon-floppy-saved"></i>&nbsp; Kaydet
                    </button>
                    &nbsp;<a data-toggle="collapse" href="#ekle" class="btn  default btn-circle"> İptal </a>
                </div>
            </form>
        </div>
    </div>
</div>

<link href="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<div class="portlet light portlet-fit ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-object-group font-blue-hoki"></i>
            <span class="caption-subject font-blue-hoki sbold uppercase"> @kategoriAd Alt Kategori Listesi </span>
        </div>
        <div class="actions">
            <a class="btn btn-circle blue-hoki btn-outline btn-sm" data-toggle="collapse"
               href="#ekle">
                <span class="fa fa-plus"></span> Yeni Alt Kategori Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">

        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th> Alt Kategori Adı </th>
                    <th> İcon</th>
                    <th> İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var m in Model)
                    {
                        <tr>
                            <td> @m.ad </td>
                            <td> @m.icon</td>
                            <td class="tableActs" style="width: 200px;">
                                <a title="Detay" class=" btn btn-sm btn-info circle" href="/AltKategori/Duzenle/@m.altkategoriId"><span class="fa fa-edit"></span></a>
                                <a title="Sil" class=" btn btn-sm red circle" href="/AltKategori/Sil/@m.altkategoriId" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><span class="fa fa-trash"></span></a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Content/themes/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/pages/scripts/table-datatables-editable.min.js" type="text/javascript"></script>