@model Kategori
@{
    ViewBag.Title = "Duzenle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}


<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-edit font-blue-hoki"></i>
            <span class="caption font-blue-hoki bold uppercase">&nbsp;  Kategori Düzenle </span>
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <div class="form-body">
            <form method="post" action="/Kategori/Duzenle" class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Kategori Adı
                    </label>
                    <div class="col-md-9">
                        @Html.TextBoxFor(x=>x.ad, new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline blue-hoki btn-circle">
                        <i class="glyphicon glyphicon-floppy-saved"></i>&nbsp; Kaydet
                    </button>
                    &nbsp;<a data-toggle="collapse" href="/Kategori/Liste" class="btn  default btn-circle"> İptal </a>
                </div>
            </form>
        </div>
    </div>
</div>