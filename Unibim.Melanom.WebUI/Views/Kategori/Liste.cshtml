@model List<Kategori>
@{
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";

}

<div class="portlet light bordered collapse" id="ekle">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus font-blue-hoki"></i>
            <span class="caption font-blue-hoki bold uppercase">&nbsp;  Yeni Kategori Ekle </span>
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <div class="form-body">
            <form method="post" action="/Kategori/Kayit" class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Kategori Adı
                    </label>
                    <div class="col-md-9">
                        @Html.TextBox("ad", "", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline blue-hoki btn-circle">
                        <i class="glyphicon glyphicon-floppy-saved"></i>&nbsp; Kaydet
                    </button>
                    &nbsp;<a data-toggle="collapse" href="#ekle" class="btn  default btn-circle"> İptal </a>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="portlet light bordered collapse" id="altekle">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus font-blue-hoki"></i>
            <span class="caption font-blue-hoki bold uppercase">&nbsp;  Yeni Alt Kategori Ekle </span>
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <div class="form-body">
            <form method="post" action="/Kategori/AltkategoriKayit" class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Alt Kategori Adı
                    </label>
                    <div class="col-md-9">
                        <input type="text" hidden="hidden" value="" id="katAd" name="kategoriId" />
                        @Html.TextBox("ad", "", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline blue-hoki btn-circle">
                        <i class="glyphicon glyphicon-floppy-saved"></i>&nbsp; Kaydet
                    </button>
                    &nbsp;<a data-toggle="collapse" href="#altekle" class="btn  default btn-circle"> İptal </a>
                </div>
            </form>
        </div>
    </div>
</div>

<link href="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<div class="portlet light portlet-fit ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-object-ungroup font-blue-hoki"></i>
            <span class="caption-subject font-blue-hoki sbold uppercase"> Kategori Listesi </span>
        </div>
        <div class="actions">
           
                <a class="btn btn-circle blue-hoki btn-outline btn-sm" data-toggle="collapse"
                   href="#ekle">
                    <span class="fa fa-plus"></span> Yeni Kategori Ekle
                </a>
        </div>
    </div>
    <div class="portlet-body">

        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th> Kategori Adı </th>
                    <th> İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var m in Model)
                    {
                        <tr>
                            <td> @m.ad </td>
                            <td class="tableActs" style="width: 200px;">


                                <a title="Alt Kategori Ekle" data-toggle="collapse" href="#altekle" class=" btn btn-sm btn-success circle" id="altKEkle" onclick="myFunction1(@m.kategoriId)">
                                    <span class="fa fa-plus"></span>

                                </a>
                                <a title="Alt Kategori Listesi" class=" btn btn-sm purple circle" href="/Kategori/Detay/@m.kategoriId"><span class="fa fa-list"></span></a>
                                <a title="Düzenle" class=" btn btn-sm btn-info circle" href="/Kategori/Duzenle/@m.kategoriId"><span class="fa fa-edit"></span></a>
                                <a title="Sil" class=" btn btn-sm red circle" href="/Kategori/Sil/@m.kategoriId" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><span class="fa fa-trash"></span></a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Content/themes/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/pages/scripts/table-datatables-editable.min.js" type="text/javascript"></script>


@section footerScript{
    <script>
        function myFunction1(id) {
            document.getElementById("katAd").value = id;
        }
    </script>
}
