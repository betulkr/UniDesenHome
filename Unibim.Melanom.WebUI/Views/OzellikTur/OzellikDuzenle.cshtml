@model Ozellik
@{
    ViewBag.Title = "OzellikDuzenle";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div class="portlet light bordered ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-edit font-blue-hoki"></i>
            <span class="caption font-blue-hoki bold uppercase">&nbsp;  Özellik Düzenle </span>
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <div class="form-body">
            <form method="post" action="/OzellikTur/OzellikDuzenle" class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Özellik Türü
                    </label>
                    <div class="col-md-9">
                        @Html.DropDownListFor(x => x.ozellikTurId, (SelectList)ViewBag.OzellikTur, "", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Özellik Adı
                    </label>
                    <div class="col-md-9">
                        @Html.TextBox("ad", "", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Özellik Kodu
                    </label>
                    <div class="col-md-9">
                        @Html.TextBox("kod", "", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline blue-hoki btn-circle">
                        <i class="glyphicon glyphicon-floppy-saved"></i>&nbsp; Kaydet
                    </button>
                    &nbsp;<a data-toggle="collapse" href="#altekle" class="btn  default btn-circle"> İptal </a>
                </div>
            </form>
        </div>
    </div>
</div>

