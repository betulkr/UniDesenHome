@model List<Ozellik>
@{
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
    int ozellikTurId = (int)Session["ozellikId"];
    var ozellikTurAd = Unibim.Melanom.WebUI.Models.Connection.DbModel.EF.OzellikTur.Where(x => x.ozellikTurId == ozellikTurId).FirstOrDefault().ad;
}

<div class="portlet light bordered collapse" id="ekle">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-plus font-blue-hoki"></i>
            <span class="caption font-blue-hoki bold uppercase">&nbsp; @ozellikTurAd  Yeni Özellik Ekle </span>
        </div>
        <div class="actions">

        </div>
    </div>
    <div class="portlet-body">
        <div class="form-body">
            <form method="post" action="/OzellikTur/OzellikKayit" class="form-horizontal">
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Özellik Adı
                    </label>
                    <div class="col-md-9">
                        <input type="text" hidden="hidden" value="@ozellikTurId" name="ozellikTurId" />
                        @Html.TextBox("ad", "", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label font-blue-hoki bold">
                        Özellik Kodu
                    </label>
                    <div class="col-md-9">
                        @Html.TextBox("kod", "", new { @class = "form-control", @required = "true" })
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-outline blue-hoki btn-circle">
                        <i class="glyphicon glyphicon-floppy-saved"></i>&nbsp; Kaydet
                    </button>
                    &nbsp;<a data-toggle="collapse" href="#ekle" class="btn  default btn-circle"> İptal </a>
                </div>
            </form>
        </div>
    </div>
</div>

<link href="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<div class="portlet light portlet-fit ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-object-ungroup font-blue-hoki"></i>
            <span class="caption-subject font-blue-hoki sbold uppercase">  @ozellikTurAd </span>
        </div>
        <div class="actions">
            <a class="btn btn-circle blue-hoki btn-outline btn-sm" data-toggle="collapse"
               href="#ekle">
                <span class="fa fa-plus"></span>  @ozellikTurAd Yeni Özellik Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">

        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th> Özellik Adı </th>
                    <th> Özellik Kodu </th>
                    <th> İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var o in Model)
                    {
                        <tr>
                            <td> @o.ad</td>
                            <td> @o.kod </td>
                            <td class="tableActs" style="width: 140px;">
                                <a title="Özellik Düzenle" class=" btn btn-sm btn-info circle" href="/OzellikTur/OzellikDuzenle/@o.ozellikId"><span class="fa fa-edit"></span></a>
                                <a title="Özellik Sil" class=" btn btn-sm red circle" href="/OzellikTur/OzellikSil/@o.ozellikId" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><span class="fa fa-trash"></span></a>
                            </td>
                        </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Content/themes/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/pages/scripts/table-datatables-editable.min.js" type="text/javascript"></script>
