                                        <div class="box-2">
                                            <div class="box clearfix">
                                                <div class="row">
                                                    <div class="clearfix">
                                                        @{
                                                            if (model != null && model.Count > 0)
                                                            {
                                                                foreach (var m in model)
                                                                {
                                                                    <div class="col-md-3">
                                                                        <ul>
                                                                            <li class="label">  @m.kategori.ad </li>
                                                                            @{
