@model List<Urun>
@{
    ViewBag.Title = "Liste";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}



<link href="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<div class="portlet light portlet-fit ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-object-ungroup font-blue-hoki"></i>
            <span class="caption-subject font-blue-hoki sbold uppercase"> Ürün Listesi </span>
        </div>
        <div class="actions">
            <a class="btn btn-circle blue-hoki btn-outline btn-sm" 
               href="/Urun/Kayit">
                <span class="fa fa-plus"></span> Yeni Ürün Ekle
            </a>
        </div>
    </div>
    <div class="portlet-body">

        <table class="table table-striped table-hover table-bordered" id="sample_editable_1">
            <thead>
                <tr>
                    <th> Ürün Adı </th>
                    <th> Takım Adı </th>
                    <th> Ürün Grubu </th>
                    <th> Yükseklik </th>
                    <th> Genişlik </th>
                    <th> Derinlik </th>
                    <th> Fiyat </th>
                    <th> Stok Adedi </th>
                    <th> İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var m in Model)
                    {
                <tr>
                    <td> @m.ad </td>
                    <td> @m.Takim.takimAdi </td>
                    <td> @m.Grup.ad </td>
                    <td> @m.yükseklik </td>
                    <td> @m.genişlik </td>
                    <td> @m.derinlik </td>
                    <td> @m.fiyat </td>
                    <td> @m.adet </td>
                    <td class="tableActs" style="width: 200px;">
                        <a title="Ürün Görselleri" class=" btn btn-sm purple circle" href="/Urun/Gorsel/@m.urunId"><span class="fa fa-image"></span></a>
                        @*<a title="Ürün Detayı" class=" btn btn-sm nt-info circle" href="/Urun/Detay/@m.urunId"><span class="fa fa-list"></span></a>*@
                        <a title="Düzenle" class=" btn btn-sm btn-success circle" href="/Urun/Duzenle/@m.urunId"><span class="fa fa-edit"></span></a>
                        <a title="Sil" class=" btn btn-sm red circle" href="/Urun/Sil/@m.urunId" onclick="return confirm('Silmek istediğinizden emin misiniz?')"><span class="fa fa-trash"></span></a>
                    </td>
                </tr>
                    }

                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Content/themes/metronic/assets/global/plugins/jquery.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
<script src="~/Content/themes/metronic/assets/pages/scripts/table-datatables-editable.min.js" type="text/javascript"></script>
